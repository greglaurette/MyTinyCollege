@model IEnumerable<MyTinyCollege.Models.Course>

@{
    ViewBag.Title = "Availble Courses";
}

<h2>Availble Courses</h2>
@using (Html.BeginForm())
{
    <div class="form-inline">
         <div class="form-group">
             Select Department: Select Department: @Html.DropDownList("SelectedDepartment", null, "All", new { onchange = "$(this).closest('form').submit();", @class = "form-control input-sm" })
             <input type="submit" class="btn btn-sm btn-default" id="filter"/>
         </div>
    </div>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <h2>@item.Title</h2>
            <p>Descritipong here</p>
            <p>item.Credits</p>
            @Html.ActionLink("Details", "Details", new { id = item.CourseID}, new { @class = "btn btn-primary" })
        </div>
    }
</div>

