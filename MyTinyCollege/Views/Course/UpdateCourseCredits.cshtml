@model MyTinyCollege.Models.Course

@{
    ViewBag.Title = "UpdateCourseCredits";
}

<h2>UpdateCourseCredits</h2>

@if (ViewBag.RowsAffected == null)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-inline">  
            <div class="form-group">
                <label for="multiplier">Enter a number to multiply every course's credits by:</label>
                @Html.TextBox("multipler", "1", new { @class = "form-control", @style = "max-width:45px", @maxlength = "1", @pattern = "[1-9]{1}", @title = "multiplier must be a number between 1 and 9" })
            </div>        

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
@if (ViewBag.RowsAffected != null)
{
    <p>Number of rows affected: @ViewBag.RowsAffected</p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
